    "glob": "^7.1.6",
    "lodash.assign": "^4.2.0",
    "lodash.isdate": "^4.0.1",
    "lodash.isobject": "^3.0.2",
    "lodash.zip": "^4.2.0",
    "plist": "^3.0.6",
    "q": "^1.5.1",
    "read-chunk": "^3.2.0",
    "strip-bom": "^4.0.0"
  },
  "devDependencies": {
    "@cordova/eslint-config": "^5.0.0",
    "@nodelib/fs.macchiato": "^1.0.4",
    "jasmine": "^4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nyc": "^15.1.0",
    "rewire": "^6.0.0"
